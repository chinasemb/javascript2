page{
  height: 100%
}
.scroll-page{
  height: 100%
}
.city{
  width:142rpx ;
  text-align: center;
  line-height :92rpx ;
  font-size: 29rpx;
  color :#d3b9a0;
  float:left;
}
/*
  1屏幕 = 1080px = 750rpx     1rpx = 1.44px
  小程序的相对单位
*/
.header{
  height:92rpx;
  background : #181818;
}
.city::after{
  content: "";
  display: inline-block;
  border-width:10rpx 10rpx 0rpx;/*上，右，左,下*/
  border-style:solid;
  border-color: #fff transparent transparent;/*上，右，左,下*/
  margin-left: 5rpx ;
  vertical-align: middle ;
  position:relative;
  top:-2rpx;
}
.userInfo{
  float:right;
  width: 48rpx ;
  height: 48rpx ;
  margin:23rpx 30rpx 0 0 ;
}
.userInfo image {
  width: 100%;
  height:100% ;
}